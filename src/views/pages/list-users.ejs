<%- include('../partials/head',{title:'Lista de usuarios'}); %>
<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('../partials/menu'); %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                <%- include('../partials/navbar'); %>
                <div class="container-fluid">
                    <!-- Page Heading -->
                    <h3 class="h3 mb-4 text-gray-800">Sección de Administración de Usuarios</h3>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">id</th>
                                <th scope="col">Nombre Usuario</th>
                                <th scope="col">Correo</th>
                                <th scope="col">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(function(user){ %>
                            <tr>
                                <th><%= user.id %> </th>
                                <td><%= user.fullName %> </td>
                                <td><%= user.email %> </td>
                                </td>
                                <td>
                                    <div class="text-center">
                                        <a href="/update/<%= user.id %>" style="text-decoration: none;">
                                            <i 
                                                style="cursor: pointer" 
                                                class="fas fa-pencil mx-3 text-warning"
                                                title="Editar contacto">
                                            </i>
                                        </a>
                                        <a href="/delete/<%= user.id %>" style="text-decoration: none;">
                                        <i 
                                            style="cursor: pointer" 
                                            class="fas fa-trash mx-3 text-danger"
                                            title="Eliminar contacto">
                                        </i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                        </tbody>
                    </table>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2020</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <%- include('../partials/footer'); %>
    